#!/usr/bin/env bash
set -euxo pipefail

if [ $# -ne 2 ]; then
  echo "Usage: ./test_mpi input_file.bc expected_output.txt"
  exit
fi

IN_FILE=$1
OUT_FILE=$1.out
EXPECTED_OUTPUT=$2

@PARCOACH_BIN@ --color=0 -check-mpi ${IN_FILE} -o /dev/null 2>${OUT_FILE}
@Python3_EXECUTABLE@ @CMAKE_CURRENT_SOURCE_DIR@/file_contains.py ${OUT_FILE} ${EXPECTED_OUTPUT}
